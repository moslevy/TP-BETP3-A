<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">


    <Button
        android:id="@+id/button_update"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:layout_marginBottom="5dp"
        android:background="@color/color_edit_btn"
        android:fontFamily="sans-serif-black"
        android:text="@string/edit_auto"
        android:textColor="@color/colorButton"
        android:textSize="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <EditText
        android:id="@+id/auto_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Marca"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/text_size"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/button_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/auto_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Modelo"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/text_size"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_marca" />

</androidx.constraintlayout.widget.ConstraintLayout>